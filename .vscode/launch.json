{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Launch OpenFeed",
            "type": "coreclr",
            "request": "launch",
            "preLaunchTask": "build OpenFeed",
            "program": "${workspaceFolder}/samples/OpenFeed/bin/Debug/net10.0/OpenFeed.dll",
            "args": [],
            "cwd": "${workspaceFolder}/samples/OpenFeed",
            "stopAtEntry": false,
            "serverReadyAction": {
                "action": "openExternally",
                "pattern": "\\bNow listening on:\\s+(https?://\\S+)"
            },
            "env": {
                "ASPNETCORE_ENVIRONMENT": "Development",
                "ASPNETCORE_URLS": "http://localhost:5000;https://localhost:5001"
            },
            "sourceFileMap": {
                "/Views": "${workspaceFolder}/Views"
            }
        },
        {
            "name": "Launch AuthenticatedFeed",
            "type": "coreclr",
            "request": "launch",
            "preLaunchTask": "build AuthenticatedFeed",
            "program": "${workspaceFolder}/samples/AuthenticatedFeed/bin/Debug/net10.0/AuthenticatedFeed.dll",
            "args": [],
            "cwd": "${workspaceFolder}/samples/AuthenticatedFeed",
            "stopAtEntry": false,
            "serverReadyAction": {
                "action": "openExternally",
                "pattern": "\\bNow listening on:\\s+(https?://\\S+)"
            },
            "env": {
                "ASPNETCORE_ENVIRONMENT": "Development",
                "ASPNETCORE_URLS": "http://localhost:5002;https://localhost:5003"
            },
            "sourceFileMap": {
                "/Views": "${workspaceFolder}/Views"
            }
        },
        {
            "name": "Launch OpenFeed (No Seeder)",
            "type": "coreclr",
            "request": "launch",
            "preLaunchTask": "build OpenFeed",
            "program": "${workspaceFolder}/samples/OpenFeed/bin/Debug/net10.0/OpenFeed.dll",
            "args": [],
            "cwd": "${workspaceFolder}/samples/OpenFeed",
            "stopAtEntry": false,
            "serverReadyAction": {
                "action": "openExternally",
                "pattern": "\\bNow listening on:\\s+(https?://\\S+)"
            },
            "env": {
                "ASPNETCORE_ENVIRONMENT": "Testing",
                "ASPNETCORE_URLS": "http://localhost:5000;https://localhost:5001",
                "SampleDataSeeder__Enabled": "false"
            },
            "sourceFileMap": {
                "/Views": "${workspaceFolder}/Views"
            }
        },
        {
            "name": "Attach to OpenFeed",
            "type": "coreclr",
            "request": "attach",
            "processId": "${command:pickProcess}"
        },
        {
            "name": "Attach to AuthenticatedFeed",
            "type": "coreclr",
            "request": "attach",
            "processId": "${command:pickProcess}"
        }
    ],
    "compounds": [
        {
            "name": "Launch Both Feeds",
            "configurations": [
                "Launch OpenFeed",
                "Launch AuthenticatedFeed"
            ],
            "stopAll": true
        }
    ]
}
